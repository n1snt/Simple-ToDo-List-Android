<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoList" parent="Theme.Material3.DynamicColors.Light">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/backgroundColorLight</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/backgroundColorLight</item>

        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/surfaceColorLight</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>